{
    "builds": [
      {
        "src": "frontend/iwrote-mern/package.json",  
        "use": "@vercel/static-build",
        "config": {
          "distDir": "frontend/iwrote-mern/dist"  
        }
      },
      {
        "src": "backend/package.json",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/iwrote-mern/dist/$1"  
      }
    ]
  }
  